<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#f0f4f8">
        <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="#cccccc" BorderThickness="1"
      VerticalAlignment="Center" HorizontalAlignment="Center" Width="650">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button Content=".Net Standard" Width="150" Height="50" Margin="5" 
                      Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="16" 
                      BorderThickness="0" Cursor="Hand" Click="Net_Standard_Click"/>
                    <Button Content=".Net Framework" Width="150" Height="50" Margin="5" 
                      Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="16" 
                      BorderThickness="0" Cursor="Hand" Click="Net_Framework_Click"/>
                    <Button Content="C++/CLI" Width="150" Height="50" Margin="5" 
                      Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="16" 
                      BorderThickness="0" Cursor="Hand" Click="Cli_Click"/>      
                </StackPanel>
                <TextBox x:Name="OutputTextBox" Width="300" Height="100" Margin="0" Padding="10"
                  FontSize="14" TextWrapping="Wrap" IsReadOnly="True"
                  Background="#fafafa" BorderBrush="#ddd" BorderThickness="1" 
                  VerticalScrollBarVisibility="Auto" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
