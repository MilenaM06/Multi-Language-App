<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" Name="MultiLangApp" Language="1033" Version="1.0.0.0" Manufacturer="Milena" UpgradeCode="dd0b0396-04e1-4b15-9007-df1352a81df8">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perUser" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate />

		<Feature Id="ProductFeature" Title="MultiLangApp" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="LocalAppDataFolder">
				<Directory Id="INSTALLFOLDER" Name="MultiLangApp" />
				<Directory Id="DesktopFolder" />
			</Directory>
		</Directory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">

			<Component Id="WpfAppExe" Guid="f6b5a2a3-7ad0-4e1d-923d-6b98dcb617e3">
				<File Id="WpfAppExeFile"
					  Source="..\..\..\MyWpfApp\bin\Release\net8.0-windows\MyWpfApp.exe" />
				<File Id="WpfAppDllFile"
					  Source="..\..\..\MyWpfApp\bin\Release\net8.0-windows\MyWpfApp.dll" />
				<File Id="RuntimeConfigJson"
					  Source="..\..\..\MyWpfApp\bin\Release\net8.0-windows\MyWpfApp.runtimeconfig.json" />
				<Shortcut Id="DesktopShortcut"
						  Directory="DesktopFolder"
						  Name="MultiLangApp"
						  WorkingDirectory="INSTALLFOLDER"
						  Advertise="no"
						  Description="Launch MultiLangApp" />
				<RegistryValue Root="HKCU"
							   Key="Software\MultiLangApp\MyWpfApp"
							   Name="installed"
							   Type="integer"
							   Value="1"
							   KeyPath="yes"/>
				<RemoveFolder Id="RemoveAppFolder" Directory="INSTALLFOLDER" On="uninstall"/>
			</Component>

			<Component Id="NetStandardLibDll" Guid="a2c4e8d1-45ab-4e1b-9c56-88e7686e3ad1">
				<File Id="NetStandardLibDllFile"
					  Source="..\..\..\MyWpfApp\bin\Release\net8.0-windows\MyNetStandardLib.dll" />
				<RegistryValue Root="HKCU"
							   Key="Software\MultiLangApp\MyNetStandardLib"
							   Name="installed"
							   Type="integer"
							   Value="1"
							   KeyPath="yes"/>
			</Component>

			<Component Id="NetFrameworkAppDll" Guid="b9e5187c-3fcd-4ce6-81b6-b08b714ef22c">
				<File Id="NetFrameworkAppDllFile"
					  Source="..\..\..\MyWpfApp\bin\Release\net8.0-windows\MyNetFrameworkApp.dll" />
				<RegistryValue Root="HKCU"
							   Key="Software\MultiLangApp\MyNetFrameworkApp"
							   Name="installed"
							   Type="integer"
							   Value="1"
							   KeyPath="yes"/>
			</Component>

			<Component Id="CliProjectDll" Guid="d3c273e4-9a55-407f-b1b4-55c24a67c177">
				<File Id="CliProjectDllFile"
					  Source="..\..\..\MyWpfApp\bin\Release\net8.0-windows\MyCliProject.dll"/>
				<RegistryValue Root="HKCU"
							   Key="Software\MultiLangApp\MyCliProject"
							   Name="installed"
							   Type="integer"
							   Value="1"
							   KeyPath="yes"/>
			</Component>

		</ComponentGroup>
	</Fragment>
</Wix>
